<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/gray"
    android:layout_height="match_parent"
    tools:context=".shoesActivity">


    <TextView
        android:id="@+id/Pishnehad_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="پیشنهاد ویژه : "
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/red"/>

    <TextView
        android:id="@+id/pishnehad_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/digital"
        android:layout_marginLeft="15dp"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="30dp"
        android:paddingLeft="20dp"
        android:textStyle="bold"
        android:textColor="@color/red"/>

        <TextView
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_below="@id/pishnehad_timer"
            android:text="-----------------------------------------------------------------------------"
            android:textStyle="bold"
            android:textColor="@color/red"/>


    <!--        580-->

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_below="@+id/line">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/shoesRecycle_iv"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                 />


            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shoesRecycle_iv"
                android:text="کفش کتونی "
                android:textSize="30dp"
                android:layout_gravity="right"
                android:paddingRight="20dp"
                android:textColor="@color/purple_700"
                />




<!--            STARR ICON-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="پرسش و پاسخ"
                    android:textSize="20dp"
                    android:textColor="@color/blue3"
                    android:layout_marginRight="10dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" . "
                    android:textSize="20dp"
                    android:textColor="@color/red"
                    android:layout_marginRight="10dp"/>




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="دیدگاه کاربران"
                    android:textSize="20dp"
                    android:textColor="@color/blue3"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(24)  4.2"
                    android:textSize="20dp"
                    android:layout_marginRight="10dp"

                    />

                <ImageView
                    android:id="@+id/starIcon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_below="@id/tv1"
                    android:layout_gravity="left"
                    android:src="@drawable/star"
                    android:layout_marginRight="10dp"

                    />
                </LinearLayout>



<!--            Penrcentage-->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    android:layout_gravity="right">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="۸۶٪ (۱۰ نفر) از خریداران این کالا را پیشنهاد کرده اند"
                        android:textColor="@color/green_mad"
                        android:paddingRight="10dp"
                        android:textSize="15dp"/>



                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="left"
                        android:src="@drawable/like"
                        android:layout_marginRight="10dp"
                        />

                 </LinearLayout>





            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="رنگ:"
                android:textSize="25dp"
                android:layout_gravity="right"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right">


                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/black_icon"
                    />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/purple_icon"
                    />


                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/yellow_icon"
                    />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/green_icon"
                    />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="45dp"
                    android:src="@drawable/red_icon"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="فروشنده"
                android:textSize="25dp"
                android:layout_gravity="right"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right">

                <ImageView
                    android:id="@+id/digikalaLogo"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/didikala_logo"
                    android:layout_toRightOf="@+id/digikalaTxt"
                    android:layout_marginRight="15dp"
                    />

                <TextView
                    android:id="@+id/digikalaTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:textSize="15dp"
                    android:text="دیجیکالا"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/digikalaTxt"
                  android:layout_toLeftOf="@id/digikalaLogo"
                    android:text=" ۹۰٪ رضایت خریداران"
                    android:textSize="8dp"
                    android:textColor="@color/green_mad"
                    />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20dp"
                android:layout_gravity="right">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="گارانتی اصالت و سلامت فیزیکی کالا"
                    android:textColor="@color/black"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center"
                    android:textSize="15dp"/>



                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="left"
                    android:src="@drawable/tik_icon"
                    android:layout_marginRight="10dp"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:gravity="right">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="موجود در انبار دیجی کالا"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="right"
                        >


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ارسال دیجی کالا"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/red"
                            />

                        <ImageView
                            android:layout_gravity="top"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginTop="3dp"
                            android:src="@drawable/post_icon"/>

                    </LinearLayout>

                </LinearLayout>


                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="right"
                    android:src="@drawable/tik_icon"

                    />





            </LinearLayout>








        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:background="@color/blue3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scrollView">
    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:paddingRight="10dp"
        android:text="دسترسی زود هنگام با "/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="عضویت در دیجی پلاس >"
            android:fontFamily="@font/roya"
            android:textColor="@color/purple_500"
            android:paddingRight="10dp"
            android:textSize="20dp"
            android:layout_below="@+id/txt1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="820,000 تومان"
            android:textSize="22dp"
            android:paddingLeft="10dp"
            android:textColor="@color/red"
            android:layout_below="@id/txt1"/>

    </RelativeLayout>



</RelativeLayout>